{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2019", "DOM"],
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
